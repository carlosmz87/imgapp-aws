pipeline{
    agent any 
    stages{
        stage('build-app-aws'){
            steps{
                echo '--------deploy app on aws--------'
                script{
                    sh 'aws ecs update-service --cluster imgapp-back-cluster --service backend-service --force-new-deployment --region us-east-1'
                    sh 'aws ecs update-service --cluster imgapp-front-cluster --service frontend-service --force-new-deployment --region us-east-1'
                }
            }
        }
        
    }
}